<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="et_userCycle">
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:height">@dimen/_35sdp</item>
        <item name="android:width">@dimen/_275sdp</item>
        <item name="android:background">@drawable/et_user_cycle_shape</item>
        <item name="android:textColorHint">#a93535</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>

    </style>
    <style name="btn_userCycle">
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:background">@drawable/btn_user_cycle_shape</item>
        <item name="android:height">@dimen/_25sdp</item>
        <item name="android:width">@dimen/_150sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#9b0d0c</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
